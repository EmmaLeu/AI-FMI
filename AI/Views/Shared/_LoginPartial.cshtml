@using Microsoft.AspNet.Identity
@if (Session.CurrentUser!=null)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello, " + Session.CurrentUser.FirstName + " " + Session.CurrentUser.LastName + "!", "Edit", "Profile", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        @if (Session.CurrentUser.IsAdmin)
        {
            <li>@Html.ActionLink("Dashboard", "Dashboard", "Admin", routeValues: null, htmlAttributes: new { id = "dashboard" })</li>
        }
        <li>@Html.ActionLink("Log Off","LogOff","Account")</li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
